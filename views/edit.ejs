<%- include('partials/header') %>
<body class = "bg-dark">
    
    <!-- navbar header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                    <li class="nav-item">
                    <a class="nav-link active" href="/interviews">Dashboard</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- form for creating a new interview -->

    <!-- top section -->
    <div class="intro py-3 bg-dark text-light text-center">
        <div class="container">
            <h2 class="display-4 my-4">Schedule an Interview</h2>
        </div>
    </div>

    <!-- form content -->
    <div class="quiz py-4 bg-dark">
        <div class="container">
            <form action="" method = "" class="user-info text-light mx-auto">
                <div class="mb-3">
                    <label for="members" class="form-label">Select Students to Remove</label>
                    <select id="list_A" name="members" class="form-control" aria-label="members" multiple>
                        <% for (let i = 0; i<locals.members.length; i++) { %> 
                            <option value=<%= JSON.stringify(locals.members[i]["_id"]).replace(/^"(.*)"$/, '$1') %> ><%= JSON.stringify(locals.members[i]["_id"]).replace(/^"(.*)"$/, '$1')+": "+JSON.stringify(locals.members[i]["name"]).replace(/^"(.*)"$/, '$1') %> </option>
                        <% } %> 
                    </select>
                </div>
                <div class="mb-4">
                    <label for="members" class="form-label">Select Students to Add</label>
                    <select id="list_B" name="members" class="form-control" aria-label="members" multiple>
                        <% for (let i = 0; i<locals.not_members.length; i++) { %> 
                            <option value=<%= JSON.stringify(locals.not_members[i]["_id"]).replace(/^"(.*)"$/, '$1') %> ><%= JSON.stringify(locals.not_members[i]["_id"]).replace(/^"(.*)"$/, '$1')+": "+JSON.stringify(locals.not_members[i]["name"]).replace(/^"(.*)"$/, '$1') %> </option>
                        <% } %> 
                    </select>
                </div>
                <div class="text-light mb-4 "><%= locals.problem %></div>
                <div class="text-light mb-4 " id="errors"></div>
                <a type = "button" class = "btn btn-outline-light" href="/interviews">Cancel</a>
                <button type="submit" class="btn btn-outline-light submit">Submit</button>
            </form>
        </div>
    </div>
    <script src="/scripts/edit.js"></script>
</body>